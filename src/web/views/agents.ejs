<%- include('layout', { body: `
<h2>Agentes</h2>
<form method="post" action="/agents">
  <input name="name" placeholder="Nome" required>
  <input name="code" placeholder="Código">
  <textarea name="description" placeholder="Descrição"></textarea>
  <input name="role" placeholder="Papel">
  <input name="objective" placeholder="Objetivo">
  <input name="policies" placeholder="Políticas">
  <input name="task" placeholder="Tarefa">
  <input name="publico" placeholder="Público">
  <input name="provider" placeholder="Provedor LLM">
  <button type="submit">Criar</button>
  </form>

<h3>Lista</h3>
<table>
  <thead><tr><th>Nome</th><th>Papel</th><th>Provedor</th><th>Padrão</th><th>Ações</th></tr></thead>
  <tbody>
    ${agents.map(a => `<tr>
      <td><a href="/agents/${a.id}">${a.name}</a></td>
      <td>${a.role||''}</td>
      <td>${a.provider||''}</td>
      <td>${a.active? 'sim':'não'}</td>
      <td>
        <form method="post" action="/agents/${a.id}/default">
          <button type="submit">Definir padrão</button>
        </form>
      </td>
    </tr>`).join('')}
  </tbody>
</table>

<h3>Importar do Fluxi</h3>
<form method="post" action="/import/maria">
  <input name="path" value="e:\\2026\\projetos\\fluxi\\fluxi.db">
  <button type="submit">Copiar Agente Maria e ferramentas</button>
</form>
` }) %>